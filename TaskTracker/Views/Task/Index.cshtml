@model List<ToDoTask>
    <h2>Görev Listesi</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Açıklama</th>
                <th>Durum</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var task in Model)
            {
                <tr>
                    <td>@task.Id</td>
                    <td>@task.Description</td>
                    <td>@task.Status</td>
                    <td>
                        <a href="/Task/Details/@task.Id" class="btn btn-info">Detaylar</a>
                        <a href="/Task/Edit/@task.Id" class="btn btn-warning">Düzenle</a>
                        <a href="/Task/Delete/@task.Id" class="btn btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a href="/Task/Create" class="btn btn-success">Yeni Görev Ekle</a>